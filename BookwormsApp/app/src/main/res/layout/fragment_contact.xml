<?xml version="1.0" encoding="utf-8"?>

<!-- This XML layout file defines the UI for ContactFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ContactFragment">

    <!-- LinearLayout to hold the content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- TextView for introductory message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am here for all of your requests!"
            android:padding="8dp"
            android:textSize="22sp"
            android:layout_marginTop="8dp"/>

        <!-- TextView for contact information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can reach me by:"
            android:padding="8dp"
            android:textSize="19sp"
            android:layout_marginTop="8dp"/>

        <!-- LinearLayout for email contact -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp" >

            <!-- ImageView for email icon -->
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_email" />

            <!-- TextView for email address -->
            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  yuvalpinhas73@gmail.com"
                android:textColor="#337ab7"
                android:textSize="19sp" />

        </LinearLayout>

        <!-- LinearLayout for phone contact -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp" >

            <!-- ImageView for phone icon -->
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_phone" />

            <!-- TextView for phone number -->
            <TextView
                android:id="@+id/phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  055-669-2388"
                android:textColor="#337ab7"
                android:textSize="19sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
