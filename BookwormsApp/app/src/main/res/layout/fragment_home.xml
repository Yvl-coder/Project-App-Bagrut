<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for HomeFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <!-- LinearLayout to hold the content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp" >

        <!-- ImageView for app logo -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_app" />

        <!-- TextView for welcome message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Bookworms!"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:gravity="center" />

        <!-- TextView for introductory message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Welcome to the best app!"
            android:textSize="25sp"
            android:gravity="center" />

        <!-- TextView for app description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Love books? Want to discover new and trendy books? This is the right place for you!"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- TextView for additional welcome message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="I am happy you're here! Check out this awesome app and make the best of it!"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- TextView for suggesting videos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="You've reached the right place for you! I invite you to watch the following videos that are necessary for a true bookworm:"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- TextView for video 1 description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="This is what happens when the bookstore is closed..."
            android:textSize="15sp"
            android:gravity="center" />

        <!-- WebView for video 1 -->
        <WebView
            android:id="@+id/video1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <!-- TextView for video 2 description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Want to read more books? Watch this!"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- WebView for video 2 -->
        <WebView
            android:id="@+id/video2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <!-- TextView for video 3 description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="What does Bill Gates think about books?"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- WebView for video 3 -->
        <WebView
            android:id="@+id/video3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <!-- TextView for video 4 description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Books can make you a millionaire?"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- WebView for video 4 -->
        <WebView
            android:id="@+id/video4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <!-- TextView for video 5 description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Books Elon Musk thinks everyone should read!"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- WebView for video 5 -->
        <WebView
            android:id="@+id/video5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

    </LinearLayout>

</ScrollView>
