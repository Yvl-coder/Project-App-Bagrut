<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for ProfileFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:fillViewport="true" >

    <!-- LinearLayout to hold the profile content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <!-- TextView for profile management prompt -->
        <TextView
            android:text="Manage your profile easily!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal" />

        <!-- LinearLayout for contact option -->
        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:padding="8dp">

            <!-- TextView for contact option text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact "
                android:textColor="#4caf50"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <!-- ImageView for contact icon -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact_text" />
        </LinearLayout>

        <!-- LinearLayout for username label with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp" >

            <!-- ImageView for username icon -->
            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/ic_username_profile"
                android:layout_gravity="center"/>

            <!-- TextView for username label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Username:"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- TextView to display the username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="10dp"/>

        <!-- LinearLayout for ID label with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp">

            <!-- ImageView for ID icon -->
            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/ic_id_profile"
                android:layout_gravity="center"/>

            <!-- TextView for ID label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ID:"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- TextView to display the ID -->
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="10dp" />

        <!-- LinearLayout for email label with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp">

            <!-- ImageView for email icon -->
            <ImageView
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:src="@drawable/ic_email_profile"
                android:layout_gravity="center"/>

            <!-- TextView for email label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Email:"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- TextView to display the email -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="10dp" />

        <!-- LinearLayout for edit profile option -->
        <LinearLayout
            android:id="@+id/edit_save_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:padding="8dp">

            <!-- TextView for edit option text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit  "
                android:textColor="#337ab7"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <!-- ImageView for edit icon -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_profile" />
        </LinearLayout>

        <!-- LinearLayout for delete profile option -->
        <LinearLayout
            android:id="@+id/delete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="8dp">

            <!-- TextView for delete option text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete  "
                android:textColor="#d1242f"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <!-- ImageView for delete icon -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

        <!-- Button for logging out -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Logout"
            android:backgroundTint="#b97632"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
