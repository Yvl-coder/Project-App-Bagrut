<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for ChallengesFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ChallengesFragment">

    <!-- LinearLayout to hold the content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:orientation="vertical" >

        <!-- TextView for introductory message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookworms, ready for some challenges???"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- TextView for 'play' message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's play!"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- TextView for selecting a challenge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a challenge!"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- LinearLayout for the first challenge - fast typing -->
        <LinearLayout
            android:id="@+id/challenge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the challenge icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_fast_typing"
                android:layout_gravity="center_horizontal"/>

            <!-- TextView for the challenge title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Typing"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- LinearLayout for the second challenge - fast talking -->
        <LinearLayout
            android:id="@+id/challenge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the challenge icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_fast_talking"
                android:layout_gravity="center_horizontal" />

            <!-- TextView for the challenge title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Talking"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- TextView for the scoreboard -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There is also a scoreboard!"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- LinearLayout for the scoreboard -->
        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the scoreboard icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_scoreboard"
                android:layout_gravity="center_horizontal" />

            <!-- TextView for the scoreboard title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scoreboard"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
