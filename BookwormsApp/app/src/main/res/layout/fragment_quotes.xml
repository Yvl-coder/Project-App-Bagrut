<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for QuotesFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuotesFragment">

    <!-- LinearLayout to hold the content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:orientation="vertical" >

        <!-- TextView for introductory text about motivation about exploring quotes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookworms, we always want to be a better version of us."
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- TextView for additional introductory text about quotes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes are an awesome way to do that!"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- TextView instructing the user to select a quote category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the desired category of the quote from the categories below!"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- LinearLayout for the "Happiness" category -->
        <LinearLayout
            android:id="@+id/category1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the happiness icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_happiness"
                android:layout_gravity="center_horizontal"/>

            <!-- TextView for the "Happiness" category label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happiness"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- LinearLayout for the "Success" category -->
        <LinearLayout
            android:id="@+id/category2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the success icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_success"
                android:layout_gravity="center_horizontal" />

            <!-- TextView for the "Success" category label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- LinearLayout for the "Inspirational" category -->
        <LinearLayout
            android:id="@+id/category3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <!-- ImageView for the inspirational icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_inspirational"
                android:layout_gravity="center_horizontal" />

            <!-- TextView for the "Inspirational" category label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inspirational"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
