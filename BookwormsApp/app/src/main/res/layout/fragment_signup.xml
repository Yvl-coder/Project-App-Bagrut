<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for SignupFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SignupFragment">

    <!-- LinearLayout to hold the content of the SignupFragment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- TextView to display the welcome message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am welcome your registration!"
            android:padding="8dp"
            android:textSize="22sp"
            android:layout_marginTop="8dp"/>

        <!-- TextView to display the rules dialog for the rules the input need to obey -->
        <TextView
            android:id="@+id/rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Rules(?)"
            android:textColor="#337ab7"
            android:textSize="15sp" />

        <!-- EditText for the user to enter their username -->
        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/signup_username"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Username"
            android:drawablePadding="8dp"/>

        <!-- EditText for the user to enter their ID -->
        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/signup_id"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Id"
            android:drawablePadding="8dp"/>

        <!-- EditText for the user to enter their email -->
        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/signup_email"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Email"
            android:drawablePadding="8dp"/>

        <!-- EditText for the user to enter their password -->
        <EditText
            android:id="@+id/signup_password"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp" />

        <!-- ImageView for showing/hiding the password -->
        <ImageView
            android:id="@+id/imageView_show_hide_pwd"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="-43dp" />

        <!-- Button for the user to sign up -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:backgroundTint="#b97632"/>

    </LinearLayout>

</ScrollView>
