<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout file defines the UI for LibraryFragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".LibraryFragment">

    <!-- LinearLayout to hold the content of the library fragment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:orientation="vertical" >

        <!-- TextView for the main message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here's the library, Enjoy!"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- TextView for the instruction message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To discover about a book that is interesting you, press on it!"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"/>

        <!-- LinearLayout to hold the rows of books -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- LinearLayout for the first row of books -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <!-- ImageView for book 1 -->
                <ImageView
                    android:id="@+id/book1"
                    android:layout_width="120dp"
                    android:layout_height="190dp"
                    android:src="@drawable/book1"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Space between books -->
                <Space
                    android:layout_width="35dp"
                    android:layout_height="match_parent" />

                <!-- ImageView for book 2 -->
